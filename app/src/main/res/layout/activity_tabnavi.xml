<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/too"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    tools:context=".frament.tabnavi">

    // viewpager thuộc androidx
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <!--    // import google -->
    <!--        gọi thuộc tính color vừa được tạo ở trong file-->
    <!--    tạo 1 menu chứa icon và tên của chức năng-->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btnavi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/navi"

        app:itemTextColor="@color/color_navi"
        app:itemIconTint="@color/color_navi"
        app:menu="@menu/menu_bt_navi"
        />

</RelativeLayout>


